name: CI Pipeline

on:
  # Trigger workflows for pushes and pull requests
  push:
    branches:
      - main
  pull_request:
    branches:
      - main

jobs:
  build-and-test:
    name: Build and Test
    runs-on: ubuntu-latest

    steps:
    # Step 1: Checkout the repository
    - name: Checkout code
      uses: actions/checkout@v3

    # Step 2: Set up Node.js
    - name: Set up Node.js
      uses: actions/setup-node@v3
      with:
        node-version: 18 # Choose your Node.js version

    # Step 3: Install dependencies
    - name: Install dependencies
      run: npm ci # or npm install

    # Step 4: Run tests
    - name: Run tests
      run: npm test

    # Step 5: Lint the code (optional)
    - name: Lint code
      run: npm run lint
      continue-on-error: false # Fail the workflow on linting errors